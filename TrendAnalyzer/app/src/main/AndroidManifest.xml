<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="vorotilenko.trendanalyzer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrendAnalyzer" >
        <activity android:name=".activities.chart.ChartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.select.currency.SelectSecondCurrencyActivity"
            android:label="@string/select_2nd_currency"/>
        <activity
            android:name=".activities.select.currency.SelectFirstCurrencyActivity"
            android:label="@string/select_1st_currency"/>
        <activity
            android:name=".activities.select.exchange.SelectExchangeActivity"
            android:label="@string/select_exchange"/>
        <activity
            android:name=".activities.observedsymbols.ObservedSymbolsActivity"
            android:label="@string/observed_symbols"
            android:parentActivityName=".activities.chart.ChartActivity"/>
    </application>

</manifest>